{
  "manifest_version": 3,
  "name": "DevShot",
  "version": "1.0.0",
  "description": "Professional screenshot tool for web developers. Capture viewport, full-page, mobile, and tablet screenshots with one click.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "DevShot - Screenshot Tool"
  },
  "permissions": [
    "scripting",
    "storage",
    "contextMenus",
    "tabs",
    "downloads",
    "tabCapture",
    "offscreen",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "settings/settings.html"
}
